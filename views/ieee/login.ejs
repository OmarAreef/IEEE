<% layout('layout/boilerplate.ejs') %>

<h2 class="display-2">Please enter your Email and Password</h2>
  <div class="container">
    <form>
      <div class="d-flex row justify-content-start mb-3">
        <div class="form-group col-6 ">
          <label for="exampleInputEmail1 text" class="mb-2">Email address</label>
          <input type="email" class="form-control text" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Enter email">
        </div>
      </div>
      <div class="row justify-content-start mb-3">
        <div class="form-group col-6 justify-content-center">
          <label for="exampleInputPassword1 text" class="mb-2">Password</label>
          <input type="password" class="form-control  text" id="exampleInputPassword1" placeholder="Password">
        </div>

      </div>
      <div class="row justify-content-start">
        <div class="col-6 justify-content-end">
          <button class="btn btn-outline-light mb-4"> Log in </button>
        </div>
      </div>
  </div>